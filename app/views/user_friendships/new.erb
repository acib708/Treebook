<% if @friend %>
    <h1><%= @friend.full_name %></h1>

    <p>Do you want to send a friend request to <%= @friend.full_name %>?</p>

    <%= form_for @user_friendship, method: :post do |form| %>
        <div class="form form-actions">
          <%= form.hidden_field :friend_id, value: @friend.to_param %>
          <%= submit_tag 'Yes, add friend.', class: 'btn btn-info' %>
          <%= link_to 'Cancel', profile_path(@friend.profile_name), class: 'btn btn-danger' %>
        </div>
    <% end %>
<% end %>