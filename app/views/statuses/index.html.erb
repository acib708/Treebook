<div class="page-header">
	<h1>All Statuses</h1>
</div>

<%= link_to 'Post New', new_status_path, class: 'btn btn-info' %>

<% @statuses.each do |status| %>
  <% if can_display_status? status %>
    <div class="status">
        <div class="row">
            <div class="span 1">
                <%= link_to image_tag(status.user.gravatar_url, class: 'img-circle'), profile_path(status.user.profile_name) %>
            </div>
            <div class="span7">
                <strong>
                  <%=
                      #link_to status.user.full_name , profile_path(status.user.profile_name) #Use this line, but remove link class
                      status.user.full_name
                  %>
                </strong>
                <p><%= status.content %></p>
                <%= display_attachment status, false %>
                <div class="meta">
                    <%= link_to time_ago_in_words(status.created_at) + ' ago', status %>
                    <span class="admin">
                        | <%= link_to 'Edit', edit_status_path(status) %> |
                          <%= link_to 'Delete', status, method: :delete, data:{confirm: 'Are you sure?'} %>
                    </span>
                </div>
            </div>
        </div>
    </div>
  <% end %>
<% end %>