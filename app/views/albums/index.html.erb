<%= page_header do %>
    <h1>Listing albums</h1>
<% end %>

<ul class="thumbnails">
  <% @albums.each do |album| %>
      <li class="span3">
        <div class="thumbnail">
          <%= link_to album_thumbnail(album), album_pictures_path(album) %><br />
          <div class="caption">
            <h3 class="text-center"><%= album.title %></h3>
            <p><%= link_to 'View Album', album_pictures_path(album), class: 'btn btn-primary btn-block' %></p>
          </div>
        </div>
      </li>
  <% end %>
</ul>


<%= link_to 'New Album', new_album_path %>
